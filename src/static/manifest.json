{
  "name": "Tab Wizard",
  "description": "Tab Wizard Extension in React!",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Tab Wizard Extension",
    "default_icon": "icon.png"
  },
  "host_permissions": ["https://*/*", "http://*/*"],
  "permissions": [
    "sidePanel",
    "tabs",
    "activeTab",
    "tabGroups",
    "storage",
    "contextMenus",
    "alarms",
    "notifications",
    "search",
    "scripting"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
